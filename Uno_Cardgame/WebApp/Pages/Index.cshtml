@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>

<html lang="en">
<head>
    <title>GameTable</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
          rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
          crossorigin="anonymous">
    
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">
            <img src="~/Images/uno!.png" alt="Card" asp-append-version="true" width="300" height="260"/>
        </h1>
        <p>Play UNO! with friends and family here and now!!</p>
        <h3>@Model.DatabaseInfo</h3>
    </div>

    <div class="text-center">
        <a class="nav-link text-dark" asp-area="" asp-page="/Games/Index">
            <button class="btn btn-outline-dark">Saved Games</button>
        </a>
    </div>
    <div class="text-center">
        <a class="nav-link text-dark" asp-area="" asp-page="/Play/StartNewGame">
            <button class="btn btn-outline-dark">Start New Game</button>
        </a>
    </div>
</body>